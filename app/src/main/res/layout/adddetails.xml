<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addproducts1">

    <EditText
        android:id="@+id/first1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:hint="mode"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/first2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="cuponcode"
        android:layout_below="@id/first1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="30dp"/>


    <EditText
        android:id="@+id/first3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:hint="Status"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/first4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:hint="Payment"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/first5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first4"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:hint="orderdate"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/first6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first5"
        android:layout_marginStart="16dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="16dp"
        android:hint="deliverydate"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/submit2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="590dp"
        android:hint="SUBMIT" />

</RelativeLayout>