<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".running">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="292dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:text="Running"
            android:drawableStart="@drawable/baseline_directions_run_24"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Your last running workout-20.7"
            android:textSize="20dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/dates">

    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"
        android:hint="Statistic"
        android:textColorHint="@color/black"
        android:textSize="35dp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="340dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="210dp"
                android:layout_height="69dp"
                android:layout_marginLeft="20dp"
                android:text="3,234 m"
                android:textSize="35dp"
                android:textColor="#FFA500"/>

            <TextView
                android:layout_width="210dp"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"

                android:text="523  kcal"
                android:textSize="35dp"
                android:textColor="#FFA500"/>
            <TextView
                android:layout_width="232dp"
                android:layout_height="85dp"
                android:layout_marginLeft="20dp"

                android:text="489,1points"
                android:textColor="#FFA500"
                android:textSize="35dp"
                 />
            <TextView
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"

                android:text="54  min"
                android:textSize="35dp"
                android:textColor="#FFA500"/>
            <TextView
                android:layout_width="210dp"
                android:layout_height="92dp"
                android:layout_marginLeft="20dp"

                android:text="65 kgs"
                android:textSize="35dp"
                android:textColor="#FFA500"/>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/manrun" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


